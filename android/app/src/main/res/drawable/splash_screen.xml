<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fundo gradiente -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#006994"
                android:endColor="#ADD8E6"
                android:angle="90" />
        </shape>
    </item>

    <!-- Ícone central -->
    <item>
        <bitmap
            android:gravity="center"
            android:src="@drawable/icone_ma_400_trans" /> <!-- Ícone do MediAlerta -->
    </item>

</layer-list>

